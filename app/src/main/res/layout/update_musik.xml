<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Update Data Musik"
                android:background="@color/design_default_color_primary"
                android:layout_centerHorizontal="true"
                android:textSize="25sp"
                android:gravity="center"
                android:scrollbars="vertical"
                android:textColor="#fff"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poster Url :"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:id="@+id/posturl"
                android:inputType="textMultiLine"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judul Musik :"
                android:layout_below="@id/posturl"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/posturl"
                android:id="@+id/jtext"
                android:layout_marginTop="20dp"
                android:inputType="textMultiLine"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi Musik :"
                android:layout_below="@id/jtext"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dtext"
                android:layout_marginTop="20dp"
                android:layout_below="@id/jtext"
                android:inputType="textMultiLine"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"/>
            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Update"
                android:id="@+id/usubmit"
                android:background="@color/design_default_color_primary"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:layout_below="@id/dtext"
                android:layout_centerHorizontal="true"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>